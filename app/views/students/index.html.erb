<div class="container my-4">
  <h1 class="mb-4">塾生一覧</h1>
  <div class="list-group">
    <% @students.each do |student| %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to student_path(student), class: "flex-grow-1 text-decoration-none text-reset" do %>
          <%= student.last_name %> <%= student.first_name %>
        <% end %>
        <%= link_to "メッセージ", student_rooms_path(student), class: "btn btn-sm btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
