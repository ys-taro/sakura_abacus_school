<div class="container my-4">
  <h1 class="mb-4">問い合わせ内容 詳細</h1>
  <div class="card shadow-sm">
    <div class="card-body">
      <dl class="row">
        <dt class="col-sm-3">お名前</dt>
        <dd class="col-sm-9">
          <%= @contact.last_name %> <%= @contact.first_name %>
          （<%= @contact.last_name_kana %> <%= @contact.first_name_kana %>）
        </dd>

        <dt class="col-sm-3">メールアドレス</dt>
        <dd class="col-sm-9"><%= @contact.email %></dd>

        <dt class="col-sm-3">電話番号</dt>
        <dd class="col-sm-9"><%= @contact.phone_number.presence || "未入力" %></dd>

        <dt class="col-sm-3">連絡方法</dt>
        <dd class="col-sm-9"><%= @contact.contact_type %></dd>

        <dt class="col-sm-3">お問い合わせ内容</dt>
        <dd class="col-sm-9"><%= simple_format(@contact.text) %></dd>

        <dt class="col-sm-3">受付日時</dt>
        <dd class="col-sm-9"><%= @contact.created_at.strftime("%Y年%m月%d日 %H:%M") %></dd>
      </dl>
    </div>
  </div>
  <div class="mt-3">
    <%= link_to "一覧に戻る", admin_contacts_path, class: "btn btn-secondary" %>
  </div>
</div>
