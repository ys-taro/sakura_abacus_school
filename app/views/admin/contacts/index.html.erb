<div class="container my-4">
  <h1 class="mb-4">問い合わせ一覧</h1>
  <div class="list-group">
    <% @contacts.each do |contact| %>
      <%= link_to admin_contact_path(contact), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
        <div>
          <strong><%= contact.last_name %> <%= contact.first_name %></strong>
          <span class="text-muted small ms-2">
            （<%= contact.last_name_kana %> <%= contact.first_name_kana %>）
          </span>
        </div>
        <span class="text-muted small">
          <%= contact.created_at.strftime("%Y年%m月%d日 %H:%M") %>
        </span>
      <% end %>
    <% end %>
  </div>
</div>
