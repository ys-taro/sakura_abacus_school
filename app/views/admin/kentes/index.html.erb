<div class="container my-4">
  <h1 class="mb-4">検定試験一覧</h1>

  <ul class="list-group">
    <% @kente_numbers.each do |kente_number| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span>第 <%= kente_number.number %> 回</span>
        <%= link_to '詳細へ', admin_kente_path(kente_number), class: 'btn btn-sm btn-primary' %>
      </li>
    <% end %>
  </ul>
</div>
