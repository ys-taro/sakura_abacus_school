<div class="container my-4">
  <h1 class="mb-4">お知らせ投稿</h1>

  <%= form_with url: admin_informations_path, model: @information, local: true, html: { multipart: true, class: "needs-validation", novalidate: true } do |form| %>
    <div class="mb-3">
      <%= form.label :title, "タイトル", class: "form-label" %>
      <%= form.text_field :title, class: "form-control", required: true, placeholder: "タイトルを入力してください" %>
      <div class="invalid-feedback">
        タイトルを入力してください。
      </div>
    </div>

    <div class="mb-3">
      <%= form.label :content, "内容", class: "form-label" %>
      <%= form.text_area :content, class: "form-control", rows: 6, required: true, placeholder: "内容を入力してください" %>
      <div class="invalid-feedback">
        内容を入力してください。
      </div>
    </div>

    <div class="mb-3">
      <%= form.label :image, "画像（任意）", class: "form-label" %>
      <%= form.file_field :image, class: "form-control" %>
    </div>

    <div class="d-grid">
      <%= form.submit "投稿する", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>
