<div class="container my-4">
  <h1 class="mb-4">マスターアカウント詳細</h1>

  <div class="mb-4">
    <p><strong>住所:</strong> <%= @master_account.address %></p>
    <p><strong>電話番号:</strong> <%= @master_account.phone_number %></p>
    <p><strong>メールアドレス:</strong> <%= @master_account.email %></p>
  </div>
  <ul class="list-group">
    <% @students.each do |student| %>
      <li class="list-group-item">
        <%= link_to "#{student.last_name} #{student.first_name}", admin_student_path(student), class: "text-decoration-none" %>
      </li>
    <% end %>
  </ul>
  <%= link_to '塾生登録', new_admin_master_account_student_path(@master_account), class: "btn btn-primary mt-4" %>
</div>
