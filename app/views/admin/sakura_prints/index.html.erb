<div class="container my-4">
  <h1 class="mb-4">さくらプリントナンバー一覧</h1>

  <ul class="list-group">
    <% @sakura_print_numbers.each do |sakura_print_number| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span>No. <%= sakura_print_number.number %></span>
        <%= link_to '詳細へ', admin_sakura_print_path(sakura_print_number), class: 'btn btn-sm btn-primary' %>
      </li>
    <% end %>
  </ul>
</div>
