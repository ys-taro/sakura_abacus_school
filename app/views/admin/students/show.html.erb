<div class="container my-4">
  <h1 class="mb-4">塾生情報</h1>

  <div class="card shadow-sm">
    <div class="card-body">
      <dl class="row">
        <dt class="col-sm-3">氏名</dt>
        <dd class="col-sm-9"><%= @student.last_name %> <%= @student.first_name %></dd>

        <dt class="col-sm-3">フリガナ</dt>
        <dd class="col-sm-9"><%= @student.last_name_kana %> <%= @student.first_name_kana %></dd>

        <dt class="col-sm-3">さくらプリント最高点</dt>
        <dd class="col-sm-9"><%= @sakura_prints_high_score&.total_score || "0" %></dd>

        <dt class="col-sm-3">取得級位</dt>
        <dd class="col-sm-9"><%= @current_rank&.rank.presence || "未設定" %></dd>

        <dt class="col-sm-3">次回受験級</dt>
        <dd class="col-sm-9"><%= @next_rank&.rank.presence || "未設定" %></dd>

        <dt class="col-sm-3">有効フラグ</dt>
        <dd class="col-sm-9"><%= @student.is_active ? "有効" : "無効" %></dd>

        <dt class="col-sm-3">登録日時</dt>
        <dd class="col-sm-9"><%= @student.created_at.strftime("%Y年%m月%d日 %H:%M") %></dd>

        <dt class="col-sm-3">最終更新日時</dt>
        <dd class="col-sm-9"><%= @student.updated_at.strftime("%Y年%m月%d日 %H:%M") %></dd>
      </dl>
    </div>
  </div>

  <div class="mt-3 d-flex">
    <%= link_to "一覧に戻る", admin_students_path, class: "btn btn-secondary mr-2" %>
    <%= link_to "メッセージ", admin_room_path(@student), class: "btn btn-secondary mr-2" %>
    <%= link_to "編集", edit_admin_student_path(@student), class: "btn btn-primary mr-2" %>
    <%= link_to "削除", admin_student_path(@student), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
  </div>
</div>
