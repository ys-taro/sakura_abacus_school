<h1><%= @student.last_name + @student.first_name %> さくらプリント 成績閲覧</h1>

<div class="container">
  <div class="mb-3 row align-items-center">

  </div>

  <div class="table-responsive">
    <table class="table table-bordered align-middle text-center">
      <thead class="table-light">
        <tr>
          <th scope="col" style="width: 80px;">プリントNo.</th>
          <th scope="col" style="width: 120px;">かけ算</th>
          <th scope="col" style="width: 120px;">わり算</th>
          <th scope="col" style="width: 120px;">みとり算</th>
          <th scope="col" style="width: 140px;">みとり暗算</th>
          <th scope="col" style="width: 140px;">合計</th>
          <th scope="col" style="width: 40px;">記録日時</th>
        </tr>
      </thead>
      <tbody>
        <% @sakura_prints.each do |sakura_print| %>
          <% print_number = sakura_print.sakura_print_number %>
          <tr>
            <th class="text-start" scope="row"><%= print_number.number %></th>
            <% if sakura_print.present? %>
              <td><%= sakura_print.multiplication_score %></td>
              <td><%= sakura_print.division_score %></td>
              <td><%= sakura_print.mitori_score %></td>
              <td><%= sakura_print.mitori_anzan_score %></td>
              <td><%= sakura_print.total_score %></td>
              <td><%= sakura_print.created_at.strftime("%Y/%m/%d")%></td>
            <% else %>
              <td>-</td>
              <td>-</td>
              <td>-</td>
              <td>-</td>
              <td>-</td>
              <td>-</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-3">
    <%= link_to "塾生情報へ戻る", student_path(@student), class: "btn btn-secondary" %>
  </div>
</div>
