<h1><%= @student.last_name + @student.first_name %> 検定試験 成績閲覧</h1>

<div class="container">
  <div class="mb-3 row align-items-center">

  </div>

  <div class="table-responsive">
    <table class="table table-bordered align-middle text-center">
      <thead class="table-light">
        <tr>
          <th scope="col" style="width: 80px;">実施回</th>
          <th scope="col" style="width: 50px;">受験級</th>
          <th scope="col" style="width: 120px;">かけ算</th>
          <th scope="col" style="width: 120px;">わり算</th>
          <th scope="col" style="width: 120px;">みとり算</th>
          <th scope="col" style="width: 140px;">合計</th>
          <th scope="col" style="width: 50px;">合否</th>
        </tr>
      </thead>
      <tbody>
        <% @kentes.each do |kente| %>
          <% kente_number = kente.kente_number %>
          <% kente_rank = @kente_ranks.find_by(id: kente.kente_rank_id) %>
          <tr>
            <th class="text-start" scope="row">第 <%= kente_number.number %> 回</th>
            <% if kente.present? %>
              <td><%= kente_rank.rank %></td>
              <td><%= kente.multiplication_score %></td>
              <td><%= kente.division_score %></td>
              <td><%= kente.mitori_score %></td>
              <td><%= kente.total_score %></td>
              <td><%= kente.total_score >= kente_rank.passing_score ? "合格" : "不合格"%></td>
            <% else %>
              <td>-</td>
              <td>-</td>
              <td>-</td>
              <td>-</td>
              <td>-</td>
              <td>-</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-3">
    <%= link_to "塾生情報へ戻る", student_path(@student), class: "btn btn-secondary" %>
  </div>
</div>
