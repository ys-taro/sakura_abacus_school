<div class="container my-4">
  <h1 class="mb-4">お知らせ詳細</h1>
  <div class="row">
    <div class="col-12 mb-4">
        <div class="card h-100">
            <% if @information.image.attached? %>
              <%= image_tag @information.image.variant(resize_to_limit: [400, 200]), class: "card-img-top", alt: "お知らせ画像" %>
            <% end %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= @information.title %></h5>
              <p class="card-text"><%= simple_format(@information.content) %></p>
              <p class="card-text mt-auto"><small class="text-muted"><%= @information.created_at.strftime("%Y年%m月%d日") %></small></p>
            </div>
        </div>
    </div>
  </div>
  <%= link_to "一覧に戻る", informations_path, class: "btn btn-secondary" %>
</div>
